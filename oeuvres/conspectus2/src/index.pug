include mixins.pug

doctype html
html(lang='ru')
  head
    title= title
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")

    link(rel='stylesheet', href='../../style.css')
    script(defer, type='text/javascript', src='../../script.js')

    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/katex@0.16.7/dist/katex.min.css", integrity="sha384-3UiQGuEI4TTMaFmGIZumfRPtfKQ3trwQE2JgosJxCnGmQpL/lJdjpcHkaaFwHlcI", crossorigin="anonymous")
    script(defer, src="https://cdn.jsdelivr.net/npm/katex@0.16.7/dist/katex.min.js", integrity="sha384-G0zcxDFp5LWZtDuRMnBkk3EphCK1lhEf4UEyEM693ka574TZGwo4IWwS6QLzM/2t", crossorigin="anonymous")
    script(defer, src="https://cdn.jsdelivr.net/npm/katex@0.16.7/dist/contrib/auto-render.min.js", integrity="sha384-+VBxd3r6XgURycqtZ117nYw44OOcIax56Z4dCRWbxyPt0Koah1uHoK0o4+/RRE05", crossorigin="anonymous")
  body

    main
      details
        summary другие конспекты
        +nav(dirs, "../../")

      details(open)
        summary содержание
        nav#toc
          each h in toc 
            a(class=h.order, data-id=h.id)= h.name.substring(h.order + 1)

      article#conspect
        | !{conspect}